INITSYS :=  $(shell if [ -f /usr/bin/systemctl ]; then echo "systemd"; else echo "sysvinit"; fi)

.PHONY: build
build:
	env PYTHONPATH=../Common$${PYTHONPATH:+:$$PYTHONPATH} \
	    python setup.py build --install-data=/usr/share/

.PHONY: install
install: build
	python setup.py install -O1 --skip-build \
            --install-data=/usr/share --root $(DESTDIR)

.PHONY: clean
clean:
	python setup.py clean
	rm -rf build

.PHONY: check
check:
	./run-tests.sh

.PHONY: devel
devel:
	-if [[ $(INITSYS) == "systemd" ]] ; then \
		systemctl stop beakerd; \
	else \
		service beakerd stop; \
	fi
	DESTDIR="/" make install
	if [[ $(INITSYS) == "systemd" ]] ; then \
		cp systemd/beakerd.service /usr/lib/systemd/system/beakerd.service; \
		systemctl daemon-reload; \
		systemctl restart beakerd; \
	else \
		service beakerd restart; \
	fi
